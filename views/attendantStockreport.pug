meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title Stock Report
link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css", crossorigin="anonymous", referrerpolicy="no-referrer")
link(rel="stylesheet", href="css/attendantStockreport.css")


// Main Content
main.main-content
  .report-container
    header.report-header
      h1 Attendant's Stock Report
      p B2B Wood & Furniture Company
      p
        strong Date:
        |  
        span#reportDate

    // Filter Section
    section.filter
      form#filterForm
        label(for="filterType") View By: 
        select#filterType(name="filterType")
          option(value="" selected)
          option(value="day") Day
          option(value="week") Week
          option(value="month") Month
        input#filterDate(type="date", name="filterDate")
        button.btn-filter(type="submit")
          i.fa-solid.fa-filter
          |  Apply Filter
        button.btn-refresh(type="button" id="btnRefresh")
          i.fa-solid.fa-rotate-right
          |  Refresh
        a.btn-close(href="/stockAttendant")
          i.fa-solid.fa-xmark
          |  Close


    // Table Section
    section.table-section
      h2 Stock Data
      .table-wrapper
        table
          thead
            tr
              th Product Name
              th Quantity
              th Supplier
          tbody

    // Footer Section
    footer.report-footer
      p Generated by MWF Stock System | Confidential Report
      button.btn-print(onclick="window.print()")
        i.fa-solid.fa-print
        |  Print Report

