meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title Updates Page
link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css", integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==", crossorigin="anonymous", referrerpolicy="no-referrer")
link(rel="stylesheet", href="/css/signup.css")
//  Sidebar 
aside.sidebar
  .sidebar-header
    h2 MWF System
  nav.sidebar-nav
    ul
      li
        a.active(href="/signup")
          i.fa-solid.fa-user
          |  Register User
      li
        a(href="/managerDashboard")
          i.fa-solid.fa-clipboard
          |  Dashboard
      li
        a(href="/usersTable")
          i.fa-solid.fa-table-list
          |  Users Table
.signup-container
  //  Logo & Title 
  .header
    h2 Update Users
    p Welcome to our company portal!
  //  Signup Form 
  form#signupForm(action=`/editUser/${user._id}?_method=PUT`, method="POST")
    .form-group
      label(for="name") Full Name
      input#name(type="text", name="name", required  value=user.name)
    .form-group
      label(for="email") Email Address
      input#email(type="email", name="email", required value=user.email)
    .form-group
      label(for="phone") Phone Number
      input#phone(type="tel", name="phone", required value=user.phone)
    .form-group
      label(for="role") Role
      select#role(name="role", required)
        option(value="") Select your role
        option(value="Manager", selected=user.role === "Manager") Manager
        option(value="Attendant",  selected=user.role === "Attendant") Attendant
    //  Password fields span the full row 
    .form-group.full
      label(for="password") Password
      input#password(type="password", name="password", required, minlength="6")
    .form-group.full
      label(for="confirm_password") Confirm Password
      input#confirm_password(type="password", name="confirm_password", required, minlength="6")
    button.btn(type="submit") Save Changes
    a.btn(href="/usersTable") Cancel
script(src="js/signUp.js")