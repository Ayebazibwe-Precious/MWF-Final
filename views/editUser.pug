extends layout 
block css 
  link(rel="stylesheet", href="/css/signup.css")    

block content
  include includes/sidebar.pug  

  // Page Wrapper for consistent layout and sticky footer
  .page-wrapper
    // Main Signup Container
    .signup-container
      // Logo & Title 
      .header
        h2 Update Users
        p Welcome to our company portal!

      // Signup Form 
      form#signupForm(action=`/editUser/${user._id}?_method=PUT`, method="POST")
        .form-group
          label(for="name") Full Name
          input#name(type="text", name="name", required, value=user.name)
        .form-group
          label(for="email") Email Address
          input#email(type="email", name="email", required, value=user.email)
        .form-group
          label(for="phone") Phone Number
          input#phone(type="tel", name="phone", required, value=user.phone)
        .form-group
          label(for="role") Role
          select#role(name="role", required)
            option(value="") Select your role
            option(value="Manager", selected=user.role === "Manager") Manager
            option(value="Attendant", selected=user.role === "Attendant") Attendant

        // Password fields span the full row 
        .form-group.full
          label(for="password") Password
          input#password(type="password", name="password", required, minlength="6")
        .form-group.full
          label(for="confirm_password") Confirm Password
          input#confirm_password(type="password", name="confirm_password", required, minlength="6")

        // Form Actions
        .form-actions2
          button.btn.btn-save(type="submit") Save Changes
          a.btn.btn-cancel(href="/usersTable") Cancel

    // Footer
    footer.footer
      p Â© 2025 MWF. All rights reserved.
      p
        | Developed by 
        span.dev-name Mary Precious Ayebazibwe
        |  at 
        span.company-name Mayondo Wood & Furniture Ltd.
        | .

  // Script
  script(src="/js/signUp.js")
