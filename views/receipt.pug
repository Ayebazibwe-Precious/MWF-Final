extends layout 
block css 
  link(rel="stylesheet", href="/css/receipt.css")

block content
  .main
    .receipt-container
      // Header
      header.receipt-header
        h2 MWF-LTD
        p MWF is a B2B wood and furniture company

      hr

      // Receipt Information
      section.receipt-info
        h3 RECEIPT
        .info-grid
          p
            strong Date: 
            | #{new Date(sale.saleDate).toLocaleDateString()}
          p
            strong Customer: 
            | #{sale.customerName}
          p
            strong Sales Agent: 
            | #{sale.salesAgent.email}

      // Table of Sales Items
      table.table
        thead
          tr
            th Product Name
            th Product Type
            th Quantity
            th Unit Price
            th Payment Type
            th Transport
            th Total Price
        tbody
          if sales && sales.length
            each sale in sales
              tr
                td #{sale.productName}
                td #{sale.productType}
                td #{sale.quantity}
                td $#{sale.unitPrice}
                td #{sale.paymentType}
                td $#{sale.transportfee}
                td $#{sale.totalPrice}

      // Receipt Summary
      section.receipt-summary
        p
          strong Payment Type: 
          | #{sale.paymentType}
        p.balance-due Balance Due: $#{sale.totalPrice}
        h4 Thank you for your support!

      // Action Buttons
      .buttons
        button.btn-print(onclick="window.print()")
          i.fa-solid.fa-print
          |  Print Receipt
        a.btn-close(href="/sales")
          i.fa-solid.fa-xmark
          |  Close
