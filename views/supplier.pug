extends layout

block css
  link(rel="stylesheet", href="/css/supplier.css")

block content
  include includes/sidebar.pug

  //  Page Wrapper 
  div.page-wrapper
    // Main Content 
    main.main-content
      .main
        .form-container
          h1 SUPPLIER REGISTRATION.
          form(action="/supplier", method="POST" novalidate)
            //  Row 1: Supplier & Company 
            .form-row
              .form-group
                label(for="name") Supplier Name
                input#name(type="text", name="name", required='')
              .form-group
                label(for="company") Company Name
                input#company(type="text", name="company", required='')

            // --- Row 2: Email & Phone ---
            .form-row
              .form-group
                label(for="email") Email Address
                input#email(type="email", name="email", required='')
              .form-group
                label(for="phone") Phone Number
                input#phone(type="tel", name="phone", required='', pattern="[0-9]{10,15}")

            // --- Row 3: Address & Bank ---
            .form-row
              .form-group
                label(for="address") Address
                input#address(type="text", name="address", required='')
              .form-group
                label(for="bank") Bank Details
                input#bank(type="text", name="bank", required='', placeholder="Enter bank details")

            // --- Row 4: Product Details ---
            .form-row
              .form-group
                label(for="productName") Product Name
                input#productName(type="text", name="productName",  required='')
              .form-group
                label(for="productType") Product Type
                input#productType(type="text", name="productType", required='')

            // --- Submit Button ---
            .form-group
              button(type="submit") Register Supplier

  // === Footer Section ===
