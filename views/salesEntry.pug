extends layout

block css
  link(rel="stylesheet", href="/css/salesEntry.css") 

block content
  include includes/sidebar1.pug

  .main
    .form-container
      h2 RECORD NEW SALE
      form#salesForm(action="/salesEntry", method="POST", novalidate)
        
        .form-row
          .form-group
            label(for="customerName") Customer Name:
            input#customerName(type="text", name="customerName", required)
          .form-group
            label(for="productName") Product Name:
            select#productName(name="productName", required)
              if stocks && stocks.length
                each stock in stocks
                  option(value=stock.name)= stock.name
        
        .form-row
          .form-group
            label(for="productType") Product Type:
            select#productType(name="productType", required)
              if stocks && stocks.length
                each stock in stocks
                  option(value=stock.type)= stock.type
          .form-group
            label(for="quantity") Quantity:
            input#quantity(type="number", name="quantity", required, min="1")
        
        .form-row
          .form-group
            label(for="unitPrice") Unit Price:
            input#unitPrice(type="number", name="unitPrice", required, min="0")
          .form-group
            label(for="saleDate") Date of Sale:
            input#saleDate(type="date", name="saleDate", required)
        
        .form-row
          .form-group
            label(for="paymentType") Type of Payment:
            select#paymentType(name="paymentType", required)
              option(value='') -- Select --
              option(value="Cash") Cash
              option(value="Cheque") Cheque
              option(value="Bank Overdraft") Bank Overdraft
          .form-group.checkbox-group
            label.checkbox-label(for="transportfee")
              input#transportfee(type="checkbox", name="transportfee")
              | Transport Required (+5%)
        
        .form-row
          .form-group
            label(for="total") Total Cost:
            input#total(type='number', name="total", readonly)
        
        .form-buttons
          button(type="submit") Save Sale
          button#clearButton(type="button") Clear

      script(src='/js/calctotal.js')

