doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Login Page
    link(rel='stylesheet' href='/css/login.css')
  body
    .login-box
      h2 LOGIN

      form(action='/login' method='post' autocomplete='off')
        // Email field
        input#email(type='text' name='email' placeholder='Enter email' required='' autocomplete='off')
        if errors && errors.email
          small.error-message #{errors.email}

        // Password field
        input#password(type='password' name='password' placeholder='Enter password' required='' autocomplete='off')
        if errors && errors.password
          small.error-message #{errors.password}

        .show-password
          input#showPassword(type='checkbox')
          label(for='showPassword') Show Password

        button(type='submit') Login

      // Sign-up section stays inside .login-box
      p.signup-text
        | Don't have an account? 
        a(href='/signup') Sign Up

    script(src='/js/login.js')
