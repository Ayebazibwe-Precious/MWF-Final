extends layout 

block css
  link(rel="stylesheet", href="/css/attendantStocklist.css") 

block content
  include includes/sidebar1.pug

  // Main Wrapper
  .page-wrapper
    // Main Content
    .main
      .container
        section.table-section
          h2 Stock List

          // Controls
          .table-controls
            input#searchInput(type="text", placeholder="Search product...")
            a.btn-add(href="/stockAttendant") Add Stock

          // Table
          .table-wrapper
            table#stockTable
              thead
                tr
                  th Product Name
                  th Product Type
                  th Cost Price
                  th Quantity
                  th Date Received
                  th Quality
                  th Color
                  th Measurements
                  th Supplier Name
                  th Received By
                  th Actions
              tbody
                if items.length
                  each item in items
                    tr
                      td #{item.productName}
                      td #{item.productType}
                      td #{item.costPrice}
                      td #{item.quantity}
                      td #{moment(item.dateReceived).format("DD-MM-YYYY")}
                      td #{item.quality}
                      td #{item.color}
                      td #{item.measurements}
                      td #{item.supplierName}
                      td #{item.receivedBy ? item.receivedBy.email : '—'}
                      td.action-buttons
                        a.edit-btn(href=`/attendantEditstock/${item._id}`)
                          i.fa-solid.fa-pen-to-square
                          | Edit
                        button.delete-btn(data-id=`${item._id}`)
                          i.fa-solid.fa-trash
                          | Delete
                else
                  tr.not-found
                    td(colspan="11") Product not found

    // Footer Section
    footer.footer
      p © 2025 MWF. All rights reserved.
      p
        | Developed by 
        span.dev-name Mary Precious Ayebazibwe
        |  at 
        span.company-name Mayondo Wood & Furniture Ltd.
        | .

  // Delete Confirmation Modal
  #deleteModal.modal
    .modal-content
      p Are you sure you want to delete this product?
      button#confirmDelete Yes
      button#cancelDelete No

  // Script
  script(src="/js/attendantStocklist.js")
