meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title Stock List
link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css", crossorigin="anonymous")
link(rel="stylesheet", href="/css/attendantStocklist.css")

// Sidebar 
aside.sidebar
  .sidebar-header
    h2 MWF System
  nav.sidebar-nav
    ul
      li
        a.active(href="attendantStocklist")
          i.fa-solid.fa-table
          |  Stock List
      li
        a(href="/attendantDashboard")
          i.fa-solid.fa-clipboard
          |  Dashboard
      li
        a(href="/stockAttendant")
          i.fa-solid.fa-rectangle-list
          |  Stock Entry
      li
        a(href="/attendantStockreport")
          i.fa-solid.fa-rectangle-list
          |  Stock Report
.main
  .container
    section.table-section
      h2 Stock List

      // Controls
      .table-controls
        input#searchInput(type="text" placeholder="Search product...") 
        a.btn-add(href="/stockAttendant") Add Stock

      .table-wrapper
        table#stockTable
          thead
            tr
              th Product Name
              th Product Type
              th Cost Price
              th Quantity
              th Date Received
              th Quality
              th Color
              th Measurements
              th Supplier Name
              th Received By
              th Actions
          tbody
            if items.length
              each item in items
                tr
                  td #{item.productName}
                  td #{item.productType}
                  td #{item.costPrice}
                  td #{item.quantity}
                  td #{moment(item.dateReceived).format("DD-MM-YYYY")}
                  td #{item.quality}
                  td #{item.color}
                  td #{item.measurements}
                  td #{item.supplierName}
                  td #{item.receivedBy}
                  td.action-buttons
                    a.edit-btn(href=`/attendantEditstock/${item._id}`)
                      i.fa-solid.fa-pen-to-square
                      | Edit
                    button.delete-btn(data-id=`${item._id}`) 
                      i.fa-solid.fa-trash
                      | Delete
            else
              tr.not-found
                td(colspan="11") Product not found

// Delete Confirmation Modal
div#deleteModal.modal
  div.modal-content
    p Are you sure you want to delete this product?
    button#confirmDelete Yes
    button#cancelDelete No

script(src="/js/attendantStocklist.js")
