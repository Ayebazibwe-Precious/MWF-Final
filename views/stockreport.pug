main.content
  header
    h1 MAYONDO WOOD AND FURNITURE-LTD
    h2 Stock Report
    p
      | Date: 
      span#report-date= reportDate
  section.summary
    h3 Summary
    ul
      li
        | Total Products: 
        span#total-products= totalProducts
      li
        | Total Stock Value: 
        span#total-value= totalStockValue
      li
        | Low Stock Items: 
        span#low-stock= lowStockItems
  section.table-section
    table
      thead
        tr
          th Product Name
          th Product Type
          //- th Status
          th Quantity
          th Cost Price
          th Selling Price
          th Supplier Name
          th Date Received
          th Quality
          th Color
          th Measurements
      tbody#stock-table-body
      if items.length 
        each item in items 
          tr 
            td #{item.name}
            td #{item.type}
            //- td #{item.status}
            td #{item.qty}
            td #{item.cost}
            td #{item.price}
            td #{item.supplier}
            td #{moment(item.date).format("DD-MM-YYYY")}
            td #{item.quality}
            td #{item.color}
            td #{item.measurements}
      
  footer
    p Prepared by: #{recordedBy}
    p Approved by: ___________
